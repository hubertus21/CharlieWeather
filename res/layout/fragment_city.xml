<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCCCCC" >

    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="2" >

        <ImageView
            android:id="@+id/weatherImageViewOne"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="0"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/temperatureViewOne"
            android:layout_column="3"
            android:layout_gravity="right"
            android:layout_row="0"
            android:text="3C"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000" />

        <Space
            android:layout_column="3"
            android:layout_gravity="fill_vertical"
            android:layout_row="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/weatherDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000" />

                <ListView
                    android:id="@+id/weatherDetailsListOne"
                    android:layout_width="200dp"
                    android:layout_height="150dp" >
                </ListView>

            </LinearLayout>

        </LinearLayout>

        <com.example.charlieweather.TermometerView
            android:id="@+id/termometerView1"
            android:layout_width="180dp"
            android:layout_height="130dp"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_gravity="left|top"
            android:layout_row="1" />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/nextDaysListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000" >

        </ListView>

    </LinearLayout>
    
</LinearLayout>
